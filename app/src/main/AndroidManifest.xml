<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pfms">

    <application
        android:name=".notification.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PFMS">
        <activity android:name=".SplashActivity"
            android:theme="@style/NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="Register"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pfms.LoginActivity" />

        </activity>

        <activity android:name=".ExpenseActivity"
            android:label="Add Expense"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".HistoryActivity"
            android:label="History"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pfms.MainActivity" />

        </activity>

        <activity android:name=".EditActivity"
            android:label="Edit"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pfms.MainActivity" />

        </activity>

        <activity android:name=".TransactActivity"
            android:label="Transact"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pfms.MainActivity" />

        </activity>

    </application>

</manifest>