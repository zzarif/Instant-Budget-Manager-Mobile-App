<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="48dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Username" />

        <EditText
            android:id="@+id/et_set_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:background="@drawable/register_input"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_set_username"
            android:layout_marginBottom="4dp"
            android:text="Email" />

        <EditText
            android:id="@+id/et_set_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:background="@drawable/register_input"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_init_capital"
            android:layout_below="@+id/et_set_email"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initial Capital (BDT)" />

        <EditText
            android:id="@+id/et_init_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_init_capital"
            android:background="@drawable/register_input"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_budget"
            android:layout_below="@+id/et_init_capital"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget (BDT)" />

        <EditText
            android:id="@+id/et_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_budget"
            android:background="@drawable/register_input"
            android:layout_marginBottom="32dp"
            android:inputType="numberDecimal"
            android:padding="8dp" />


        <TextView
            android:id="@+id/tv_password"
            android:layout_below="@+id/et_budget"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/et_set_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_password"
            android:background="@drawable/register_input"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:padding="6dp" />

        <TextView
            android:id="@+id/tv_conf_password"
            android:layout_below="@+id/et_set_password"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_conf_password"
            android:background="@drawable/register_input"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:padding="6dp" />


        <Button
            android:id="@+id/btn_save"
            android:layout_below="@+id/et_confirm_password"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_below="@+id/et_confirm_password"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btn_save"
            android:padding="8dp"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </RelativeLayout>

</ScrollView>