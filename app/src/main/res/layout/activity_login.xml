<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/et_username"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_pfms_back"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:text="Personal Finance"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:text="and"
            android:layout_marginTop="-8dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:layout_marginTop="-8dp"
            android:text="Budget Management"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/register_input"
        android:drawableStart="@drawable/login_username_drawable_start_ic"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:padding="8dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/register_input"
        android:drawableStart="@drawable/login_passwd_drawable_start_ic"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Forgot Password?"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:text="Sign in"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? " />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Register"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
